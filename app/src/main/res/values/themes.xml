<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Payany1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


    </style>


    <style name="ShapeAppearanceOverlay.App.TopCornerCut" parent="">
        <item name="cornerSizeTopRight">@dimen/_23sdp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_23sdp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerCut" parent="">
        <item name="cornerSizeTopRight">@dimen/_23sdp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_23sdp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/_23sdp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_23sdp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="TexView.Demi.Woodsmoke.20sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_demi</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textColor">@color/woodsmoke</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="ImageView.Mask" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_22sdp</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="srcCompat">@drawable/ic_forward</item>
        <item name="tint">@color/lochmara</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TexView.Regular.White.15.8sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TexView.Bold.ShuttleGrey.16sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/shuttle_grey</item>
    </style>

    <style name="TexView.Demi.ShuttleGrey.14sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_demi</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/shuttle_grey</item>
    </style>

    <style name="TexView.Medium.SantasGrey.12sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/santas_grey</item>
    </style>

    <style name="PrimaryButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/woodsmoke</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>